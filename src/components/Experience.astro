---
import ExperienceItem from "./ExperienceItem.astro";
import { t } from "i18next";
---

<section class="lg:mb-32 text-gray-800 text-center">
    <h2 class="text-3xl font-bold mb-12 lg:mb-16">{t("experience.title")}</h2>

    <div
        class="grid gap-x-2 lg:gap-x-12 grid-cols-1 md:grid-cols-3 pt-4 md:mt-0"
    >
        <ExperienceItem
            img="/img/logo_activalink.png"
            title="Activalink"
            desc="BBB"
            time={t("experience.item1.time")}
            desc={t("experience.item1.desc")}
            link="https://www.linkedin.com/company/activalink/"
        />
        <ExperienceItem
            img="/img/logo_multiscan.png"
            title="Multiscan Technologies"
            desc="BBB"
            time={t("experience.item2.time")}
            desc={t("experience.item2.desc")}
            link="https://www.linkedin.com/company/multiscan-technologies-s-l/"
        />
        <ExperienceItem
            img="/img/logo_nttdata.webp"
            title="NTT DATA"
            desc="BBB"
            time={t("experience.item3.time")}
            desc={t("experience.item3.desc")}
            link="https://www.linkedin.com/company/nttdata/"
        />
        <ExperienceItem
            img="/img/logo_iobuilders.png"
            title="IOBuilders"
            desc="BBB"
            time={t("experience.item4.time")}
            desc={t("experience.item4.desc")}
            link="https://www.linkedin.com/company/iobuilders/"
        />
    </div>
</section>
