---
import { t } from "i18next";
import LearningItem from "./LearningItem.astro";
---

<section class="lg:mb-32 text-gray-800 text-center lg:text-left">
  <style>
    @media (min-width: 992px) {
      .rotate-lg-6 {
        transform: rotate(6deg);
      }
    }
    .fancy-border-radius {
      border-radius: 53% 47% 52% 48% / 36% 41% 59% 64%;
    }
  </style>
  <div
    class="container mx-auto xl:px-32 text-center lg:text-left overflow-hidden"
  >
    <div class="grid lg:grid-cols-2 flex items-center">
      <div class="mb-12 lg:mb-0 wow bounceInLeft z-10">
        <div
          class="relative block rounded-lg shadow-lg px-6 py-12 md:px-12 lg:-mr-14"
          style="background: hsla(0, 0%, 100%, 0.55); backdrop-filter: blur(30px); "
        >
          <h2 class="text-3xl font-bold mb-4 display-5">
            {t("learning.title")}
          </h2>
          <p class="text-gray-500 mb-12">
            {t("learning.desc")}
          </p>

          <div class="grid grid-cols-2 gap-x-6">
            <LearningItem
              img="/img/techs/icons/Astro.svg"
              name={t("learning.item1")}
            />
            <LearningItem
              img="/img/learning/german.webp"
              name={t("learning.item2")}
            />
          </div>
        </div>
      </div>

      <div class="hidden lg:block wow bounceInRight" data-wow-duration="1.5s">
        <img
          src="https://images.pexels.com/photos/2846814/pexels-photo-2846814.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
          class="w-full shadow-lg fancy-border-radius rotate-lg-6"
          alt=""
        />
      </div>
    </div>
  </div>
</section>
