---
import { t } from "i18next";
import Marquee from "./Marquee.astro";

export interface Skill {
  img: string;
  name: string;
}
const skills: Skill[] = [
  { img: "ts.webp", name: "TypeScript" },
  { img: "nodejs.webp", name: "Node JS" },
  { img: "next.webp", name: "Next JS" },
  { img: "docker.webp", name: "Docker" },
  { img: "laravel.webp", name: "Laravel" },
  { img: "php.webp", name: "PHP" },
  { img: "react.webp", name: "React JS" },
  { img: "git.webp", name: "Git" },
  { img: "angular.webp", name: "Angular" },
  { img: "bootstrap.webp", name: "Bootstrap" },
  { img: "mysql.webp", name: "MySQL" },
  { img: "redux.webp", name: "Redux" },
  { img: "tailwind.webp", name: "Tailwind" },
  { img: "linux.webp", name: "Linux" },
  { img: "chakra-ui.webp", name: "Chakra UI" },
  { img: "html.webp", name: "HTML" },
  { img: "css.webp", name: "Css" },
  { img: "js.webp", name: "JavaScript" },
  { img: "jquery.webp", name: "JQuery" },
];
const skills1 = [...skills].splice(0, skills.length / 2);
const skills2 = [...skills].splice(skills.length / 2);
---

<section
  class="pb-6 lg:pb-12 text-gray-800 text-center max-w-full revealing-scroll-item"
>
  <h2 class="text-3xl font-bold mb-2 lg:mb-8">{t("skills.title")}</h2>
  <div class="marquee-container">
    <Marquee skills={skills1} />
    <Marquee skills={skills2} reversed={true} />
  </div>
</section>

<style>
  @keyframes reveal {
    from {
      opacity: 0;
      transform: translateY(100px);
    }
    to {
      opacity: 1;
      transform: translateY(0px);
    }
  }
  .revealing-scroll-item {
    /* Create View Timeline */
    view-timeline-name: --revealing-image;
    view-timeline-axis: block;

    /* Attach animation, linked to the  View Timeline */
    animation: linear reveal both;
    animation-timeline: --revealing-image;

    /* Tweak range when effect should run*/
    animation-range: entry 25% cover 40%;
  }
</style>
